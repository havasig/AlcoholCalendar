<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drinkItemLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/drinkIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_challenge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_name"
            android:textSize="@dimen/statistic_title" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="this is a super-duper long text lorem ismup st b mdélfk smdflk smdf élksadnf élaksnd fkéasjdn faéksdj fnsdfk asdkfn "
            android:textSize="@dimen/statistic_details" />
    </LinearLayout>
</LinearLayout>